<html>
<head>
<title>JS 6</title>
</head>
<body>
<div id="result"></div>
    <script>
        function count(array, value) {
            let count = 0;
            for (let i = 0; i < array.length; i++) {
                if (array[i] < value) {
                    count++;
                }
            }
            return count;
        }

        function testCount() {
            
            numbers = [3, 55, 30, 28, 9, 12];
            value = 10;
            
            result = count(numbers, value);
           
            resultDiv = document.getElementById("result");
            resultDiv.textContent = "The count of numbers less than " + value + " is: " + result;
        }

        testCount();
    </script>
</body>
</html>
